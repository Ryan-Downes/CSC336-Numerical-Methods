est = 1;
m = 1;
while est > (10^(-16))
    m = m * 2;
    est = -((pi^2)/6)*(2*m/(2*m+1))*((2*m-1)/(2*m + 1)) + ((pi^2)/6)*(2*m/(2*m+1))*((2*m + 2)/(2*m + 1));
    
end
m = m/2;
est = -((pi^2)/6)*(2*m/(2*m+1))*((2*m-1)/(2*m + 1)) + ((pi^2)/6)*(2*m/(2*m+1))*((2*m + 2)/(2*m + 1));
i = 1;
while est > (10^(-16))
    i = i + 1;
    m = m + i;
    est = -((pi^2)/6)*(2*m/(2*m+1))*((2*m-1)/(2*m + 1)) + ((pi^2)/6)*(2*m/(2*m+1))*((2*m + 2)/(2*m + 1));
    
end 
